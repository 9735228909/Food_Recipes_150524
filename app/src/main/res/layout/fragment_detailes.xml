<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.DetailesFragment"
    android:padding="9dp"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="9dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp"
            >

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/imageview"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Name"
                android:textStyle="bold"
                android:textSize="20sp"
                android:fontFamily="@font/lugrasimo_regular"
                />

            <TextView
                android:id="@+id/ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="ingredients"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/viewmore"
                android:layout_width="wrap_content"
                android:text="viewmore"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="instructions"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/viewmore2"
                android:layout_width="wrap_content"
                android:text="viewmore"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/cuisine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="cuisine"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="tags"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/mealType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="mealType"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/caloriesPerServing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="caloriesPerServing"
                android:textSize="20sp"
                android:fontFamily="@font/lugrasimo_regular"
                />
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"/>

<!--            <Button-->
<!--                android:id="@+id/btnaddtocart"-->
<!--                android:text="Add to cart"-->
<!--                android:textSize="20sp"-->
<!--                android:layout_marginTop="20dp"-->
<!--                android:background="@drawable/btn_add_tocart"-->
<!--                android:layout_width="match_parent"-->
<!--                android:textColor="@color/white"-->
<!--                android:layout_height="wrap_content"/>-->

            <Button
                android:id="@+id/btnbuy"
                android:text="Buy now"
                android:textSize="20sp"
                android:background="@drawable/btn_buy_bg"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>